<div class="container">
  <% if logged_in? %>
    <h2>Welcome, <%=@user.username %>!</h2>

    <% if @user_questions %>
      <div class="my_questions">
        <% @user_questions.each do |question| %>
          <% erb :'questions/_single_question_show', locals: { question: question } %>
        <% end %>
      </div>
    <% end %>
  <% else %>

  <div id="new_user_form">
    <div class="home_buttons"><a href="/users/new">Create an Account:</a></div>

      <form class="new_user" action="/users/new" method="post">
        <label for="username">Username:</label></br>
        <input type="username" name="user[username]" value=""></br></br>

        <label for="email">Email:</label></br>
        <input type="email" name="user[email]" value=""></br></br>

        <label for="password">Password:</label></br>
        <input type="password" name="user[password]" value=""></br></br>

        <input class="button" type="submit" value="Register">
    </form>
  </div>

  <div id="login_form">
    <div class="home_buttons"><a href='/sessions/new'>Log In:</a></div>

      <form class="log_in_user" action="/sessions" method="post">
        <label for="username">Username:</label></br>
        <input type="username" name="username" value=""></br></br>

        <label for="password">Password:</label></br>
        <input type="password" name="password" value=""></br></br>

        <input class="button" type="submit" value="Log In">
      </form>

      <% if @errors %>
      <h1> <%=@errors %> </h1>
      <% end %>
  </div>

<% end %>

  <% if @questions %>
    <div id="top_questions">
      <% @questions.each do |question| %>
        <%= erb :'questions/_single_question_show', locals: { question: question } %>
      <% end %>
    </div>
  <% end %>
</div>
