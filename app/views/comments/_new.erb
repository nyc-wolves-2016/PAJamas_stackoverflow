<div class="commentForm">
  <form class="newComment" action="/<%=pathify(commentable)%>/<%=commentable.id%>/comments/new" method="post">
    <textarea name="comment[:body]" rows="8" cols="60" form="newComment"></textarea>
    <input type="hidden" name="comment[:commenter_id]"" value="current_user.id">
    <input type="submit" value="Add comment">
  </form>
</div>